{
  "compilerOptions": {
    "noEmit": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2017",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["DOM", "ES2023"],
    "outDir": "./lib",
    "jsx": "react"
  },
  "include": ["./*", "./src/**/*"]
}
