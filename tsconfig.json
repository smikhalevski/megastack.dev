{
  "compilerOptions": {
    "noEmit": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["DOM", "ES2020"],
    "outDir": "./lib",
    "jsx": "react"
  },
  "include": ["./src/**/*"]
}
